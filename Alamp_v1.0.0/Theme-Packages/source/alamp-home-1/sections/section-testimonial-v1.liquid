<div data-section-id="{{ section.id }}" data-section-type="section-testimonial" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-testimonial-v1 lazyload" {% if section.settings.ena_bgimg %}{% if section.settings.testimonial_bg != blank %} data-bg="{{section.settings.testimonial_bg|img_url:'master'}}" {% else %} style="background-image: url(//placehold.it/1920x850);" {% endif %} {% else %} style="background-color : {{section.settings.bg_color}}" {% endif %}>
    <div class="container container-testimonial">
      <div class="text-center">
        <h3 class="title_heading mb-5"d>{{section.settings.section_title}}</h3>
      </div>
      <div class="js-testimonial-v1-slide">
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "testimonial" %}
        <div class="">
          <div class="testimonial-inner">
            <div class="testimonial-info">
              <div class="avatar">
                {% if block.settings.block_img != blank %}
                <img width="88" height="88" data-src="{{block.settings.block_img|img_url:'master'}}" class="lazyload img-responsive" alt="testimonial">
                {% else %}
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>
              <div class="author-info">
                <h3 class="mb-1" >{{block.settings.block_name}}</h3>
                <p class="text-position" >{{block.settings.block_des}}</p>
              </div>
              <p class="content mar-bottom-15" >{{block.settings.block_content}}</p> 

            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
